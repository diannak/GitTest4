<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorW"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView1_img"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
        android:scaleType="fitCenter" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_rSort"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="실종or제보"
                        android:textColor="@color/colorBack0"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_rKind"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="견종이름"
                        android:textSize="24sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_rGender"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="· 성별 :" />

                    <TextView
                        android:id="@+id/txt_rGender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="수컷(중성화O)" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_rColor"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="· 털색 :" />

                    <TextView
                        android:id="@+id/txt_rColor"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="하얀색(폼피츠)" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_rContent"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="· 특징 :" />

                    <TextView
                        android:id="@+id/txt_rContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="미용을 해서 털이 짧습니다. 헥헥거리는게 심하며 왼쪽 눈에 작게 뭐가 나있습니다. 귀가 쫑긋 서있어요." />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="#C5C5C5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_rMdate"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="· 날짜 :" />

                    <TextView
                        android:id="@+id/txt_rMdate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2019-05-14" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_rPlace"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="· 장소 :" />

                    <TextView
                        android:id="@+id/txt_rPlace"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="서울시 동작구 노량진동, 장승배기역 부근" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_rName"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="· 작성자 :" />

                    <TextView
                        android:id="@+id/txt_rName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="함께하개" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="|" />

                    <TextView
                        android:id="@+id/txt_rId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="com.happy.dog@gmai.com" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginRight="5dp"
                        android:scaleType="fitCenter"
                        app:srcCompat="@android:drawable/sym_action_call" />

                    <Button
                        android:id="@+id/btn_rTel"
                        android:layout_width="match_parent"
                        android:layout_height="23dp"
                        android:background="@color/colorW"
                        android:onClick="onClick1"
                        android:text="010-0000-0000"
                        android:textAlignment="viewStart"
                        android:textColor="@color/colorTel"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

<!--                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/a01" />-->

                <fragment
                    android:id="@+id/map"
                    class="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="250dp" />

            </LinearLayout>
        </ScrollView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|top"
            android:orientation="horizontal">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_modify"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="top|end"
                android:layout_marginStart="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="20dp"
                android:scaleType="fitCenter"
                app:backgroundTint="@color/colorBack0"
                app:fabSize="normal"
                app:srcCompat="@drawable/fab_modify" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_delete"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="top|end"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:scaleType="fitCenter"
                app:backgroundTint="@color/colorBack0"
                app:fabSize="normal"
                app:srcCompat="@drawable/fab_delete" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>